<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.worldelite.job.mapper.JobMapper">
  <select id="selectSimpleById" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_job
    where id = #{id,jdbcType=BIGINT}
  </select>
  <select id="selectAndList" resultMap="BaseResultMap" parameterType="com.worldelite.job.entity.Job">
    select
    <include refid="Base_Column_List" />
    from t_job
    <where>
      <if test="companyId != null">
        and company_id = #{companyId,jdbcType=BIGINT}
      </if>
      <if test="creatorId != null">
        and creator_id = #{creatorId,jdbcType=BIGINT}
      </if>
      <if test="jobType != null">
        and job_type = #{jobType,jdbcType=TINYINT}
      </if>
      <if test="name != null">
        and name like CONCAT('%', #{name},'%')
      </if>
      <if test="categoryId != null">
        and category_id = #{categoryId,jdbcType=INTEGER}
      </if>
      <if test="cityId != null">
        and city_id = #{cityId,jdbcType=INTEGER}
      </if>
      <if test="status != null">
        and status = #{status,jdbcType=TINYINT}
      </if>
    </where>
  </select>
</mapper>