<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.worldelite.job.mapper.ActivityMapper">
  <select id="selectSimpleById" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from t_activity
    where id = #{id,jdbcType=INTEGER}
  </select>
  <select id="selectAndList" resultMap="BaseResultMap" resultType="com.worldelite.job.entity.Activity">
    select
    <include refid="Base_Column_List" />
    from t_activity
    <where>
      <if test="title != null and title != ''">
        and title like CONCAT('%', #{title},'%')
      </if>
      <if test="userId != null">
        and user_id = #{userId,jdbcType=BIGINT}
      </if>
      <if test="cityId != null">
        and city_id = #{cityId,jdbcType=INTEGER}
      </if>
      <if test="status != null">
        and status = #{status,jdbcType=TINYINT}
      </if>
    </where>
  </select>
</mapper>